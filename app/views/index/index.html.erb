<div class="main-title-col-right">
	<h2>Product news</h2>
</div>
<div class="main-product product-new fl">
	<%
		columnCount = 5
		i = 0
	%>
	<% @product_new.each do |product_new| %>
	<% if i % columnCount == 0 %>
		<ul>
		<% end %>
		<% i = i + 1 %>
			<li>
				<div class="img-product">
					<a title="<%= product_new.name %>" href="#"><%= image_tag show_url_images(product_new.id), :size => "120x120" %></a>
				</div>
				<a href="#" class="name-product" title="<%= product_new.name %>">
					<%= product_new.name %>
				</a>
				<div class="price-product">
					$<%= product_new.price %>
				</div>
			</li>
		<% if i % columnCount == 0 %>
		</ul>
	<% end %>
	<% end %>
</div>

